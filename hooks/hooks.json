{
  "version": "1.0.0",
  "hooks": [
    {
      "id": "learning-progress-tracker",
      "name": "Learning Progress Tracker",
      "description": "Automatically tracks user learning progress and provides recommendations",
      "trigger": "on_agent_complete",
      "enabled": true,
      "actions": [
        {
          "type": "track_progress",
          "metric": "agent_completion",
          "store": "local"
        },
        {
          "type": "suggest_next",
          "based_on": "completed_agents",
          "depth": 2
        }
      ]
    },
    {
      "id": "problem-validator",
      "name": "Problem Validator",
      "description": "Validates user solutions against test cases",
      "trigger": "on_solution_submit",
      "enabled": true,
      "actions": [
        {
          "type": "run_tests",
          "timeout": 5000,
          "capture_output": true
        },
        {
          "type": "complexity_check",
          "validate": ["time", "space"]
        },
        {
          "type": "provide_feedback",
          "level": "detailed"
        }
      ]
    },
    {
      "id": "interview-simulator",
      "name": "Interview Simulator",
      "description": "Simulates real interview experience with timing and feedback",
      "trigger": "on_interview_start",
      "enabled": true,
      "actions": [
        {
          "type": "start_timer",
          "duration": 45,
          "unit": "minutes"
        },
        {
          "type": "disable_hints",
          "after": 5,
          "unit": "minutes"
        },
        {
          "type": "capture_solution",
          "format": "code"
        },
        {
          "type": "provide_interview_feedback",
          "include": ["complexity", "correctness", "style", "communication"]
        }
      ]
    },
    {
      "id": "assessment-tracker",
      "name": "Assessment Tracker",
      "description": "Tracks assessment results and identifies learning gaps",
      "trigger": "on_assessment_complete",
      "enabled": true,
      "actions": [
        {
          "type": "calculate_score",
          "percentage": true
        },
        {
          "type": "identify_weak_areas",
          "threshold": 0.75
        },
        {
          "type": "recommend_resources",
          "based_on": "weak_areas",
          "type": "skill"
        },
        {
          "type": "schedule_reassessment",
          "days_until": 7
        }
      ]
    },
    {
      "id": "skill-progression",
      "name": "Skill Progression",
      "description": "Tracks skill mastery progression with badges",
      "trigger": "on_skill_practice",
      "enabled": true,
      "actions": [
        {
          "type": "update_skill_level",
          "base": "practice_count"
        },
        {
          "type": "award_badges",
          "badges": ["10-problems", "50-problems", "100-problems", "mastered"]
        },
        {
          "type": "unlock_advanced",
          "when": "skill_level >= 3"
        }
      ]
    },
    {
      "id": "community-engagement",
      "name": "Community Engagement",
      "description": "Encourages community participation and knowledge sharing",
      "trigger": "on_solution_post",
      "enabled": true,
      "actions": [
        {
          "type": "validate_solution",
          "correctness": true
        },
        {
          "type": "suggest_improvements",
          "focus": ["efficiency", "readability"]
        },
        {
          "type": "request_explanation",
          "if": "solution_complex"
        }
      ]
    }
  ],
  "configurations": {
    "progress_tracking": {
      "enabled": true,
      "save_frequency": "on_change",
      "include_metadata": true
    },
    "feedback_system": {
      "detail_level": "comprehensive",
      "include_examples": true,
      "suggest_improvements": true
    },
    "gamification": {
      "enabled": true,
      "badges": true,
      "leaderboard": false,
      "points_system": false
    },
    "assessment": {
      "auto_retry": true,
      "retry_delay_days": 7,
      "save_history": true,
      "show_comparison": true
    }
  }
}
